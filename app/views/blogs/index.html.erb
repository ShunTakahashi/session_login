<h1>ブログ一覧</h1>

<div class="container">
  <div id="new-blog-link">
    <%= link_to '新規ブログを作成する', new_blog_path %>
  </div>

  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="blog-panel">
        <h2>タイトル:<%= blog.title %></h2>
        <p>ブログ内容:<%= blog.content %></p>
        <p>投稿者:<%= blog.user.name %></p>
        <p>投稿時間:<%= blog.created_at %></p>
        <div class="blog-links">
          <%= link_to '詳細', blog, class: 'btn btn-default' %>
          <%= link_to '編集', edit_blog_path(blog), class: 'btn btn-info' %> |
          <%= link_to '削除', blog, method: :delete, data: { confirm: '本当に消しても良いですか？' }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
